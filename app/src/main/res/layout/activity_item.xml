<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:background="#f25"
    android:padding="20dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter Item Name"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:id="@+id/et_itemName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter Item Price"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:id="@+id/et_itemPrice"
        android:layout_below="@id/et_itemName"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter Item Image Name"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:id="@+id/et_item_image_name"
        android:layout_below="@id/et_itemPrice"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter Item Description"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:id="@+id/et_itemDescription"
        android:layout_below="@id/et_item_image_name"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_itemSubmit"
        android:layout_below="@id/et_itemDescription"
        android:text="Submit"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_item_show"
        android:layout_below="@id/btn_itemSubmit"
        android:text="Show Items"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/et_item_show"
        android:layout_below="@id/btn_item_show"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>