<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".RecyclerViewActivity"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/hoodie"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/sample_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Sample text"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/sample_heading"
        android:layout_below="@id/sample_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Sample text"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/sample_price"
        android:layout_below="@id/sample_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Sample text"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/sample_description"
        android:layout_below="@id/sample_price"/>


</RelativeLayout>
